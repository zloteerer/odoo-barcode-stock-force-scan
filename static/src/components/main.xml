<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="stock_barcode_force_scan.MainComponent" t-inherit="stock_barcode.MainComponent" t-inherit-mode="extension" owl="1">
        <xpath expr="//button[hasclass('o_add_line')]" position="attributes">
            <attribute name="class" separator=" " add="d-none" />
        </xpath>

        <xpath expr="//div[hasclass('o_barcode_lines')]" position="attributes">
            <attribute name="t-attf-style">margin-bottom: {{env.model.displayPutInPackButton ? '120px' : '60px'}};</attribute>
        </xpath>
    </t>

</templates>
