<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="stock_barcode_force_scan.LineComponent" t-inherit="stock_barcode.LineComponent" t-inherit-mode="extension" owl="1">

        <xpath expr="//button[hasclass('o_edit')]" position="attributes">
            <attribute name="t-att-disabled">qtyDone &gt;= qtyDemand &amp;&amp; qtyDemand &gt; 0</attribute>
        </xpath>

        <xpath expr="//button[@name='incrementButton']" position="attributes">
            <attribute name="t-att-disabled">qtyDone &gt;= qtyDemand &amp;&amp; qtyDemand &gt; 0</attribute>
        </xpath>

        <xpath expr="//button[@name='decrementButton']" position="attributes">
            <attribute name="t-att-disabled">qtyDone &lt;= 0 || qtyDone == '?'</attribute>
        </xpath>

        <!-- Ajouter la classe pour les produits ajoutÃ©s hors commande -->
        <xpath expr="//div[hasclass('o_barcode_line')]" position="attributes">
            <attribute name="t-att-class">{'o_added_product': !line.is_initial_demand_line}</attribute>
        </xpath>

    </t>

</templates>
